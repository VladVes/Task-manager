extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('profile'), method: 'patch' })
    +input(f, 'email')
    +input(f, 'firstName')
    +input(f, 'lastName')
    +input(f, 'password', { as: 'password' })
    +button(f)
  +formFor(f, { url: urlFor('deleteUser'), method: 'delete' })
    +button(f, 'submit', 'btn-danger', 'Delete profile')
