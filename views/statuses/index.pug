extends /layouts/application.pug

block content
  if isSignedIn()
    .container.mb-4.pl-0
      a.btn.btn-success.mr-2(href=urlFor('newStatus')) New status
  table.table.table-stripped.bg-light
    thead
      tr
        th Status Id
        th Status name
        th Actions
    tbody
      each status in statuses
        tr
          if !status.isSoftDeleted()
            td= status.id
            td= status.name
            td
              a.badge.badge-primary.mr-2(href=urlFor('editStatus', status.id)= 'Rename'
              a.badge.badge-danger.mr-2(href=urlFor('deleteStatus', status.id, data-confirm="Are you sure?")= 'Delete'
