extends /layouts/application.pug

block content
  if isSignedIn()
    .container.mb-4.pl-0
      a.btn.btn-primary(href=urlFor('newTask')) New task
  table.table.table-stripped
    thead
      tr
        th Task Name
        th Description
        th Creator
        th Assignet to
        th Status
        th Tags
    tbody
      each task in tasks
        tr
          td= task.name
          td= task.description
          td= task.creator
          td= task.assignedTo
          td= task.status
          td
            each tag in task.tags
              = tag.name
